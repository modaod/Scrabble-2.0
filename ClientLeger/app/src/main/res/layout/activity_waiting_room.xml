<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiplayer_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitingRoom">

    <ImageView
        android:id="@+id/scrabble_logo"
        android:layout_width="595dp"
        android:layout_height="123dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lossless_page1_1655px_logo_scrabble_verd_tif" />

    <LinearLayout
        android:id="@+id/waiting_room_main_container"
        android:layout_width="600dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrabble_logo"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/waiting_room_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="true"
                android:gravity="center"
                android:text="@string/waiting_room_header"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4FA"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar_player0"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/logo"
                    android:padding="8dp">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_player0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usertype_player0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="end|center_vertical">

                <ImageButton
                    android:id="@+id/remove_button_player0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/logo"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_baseline_close_24" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4FA"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar_player1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/logo"
                    android:padding="8dp">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/username_player1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usertype_player1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="end|center_vertical">

                <ImageButton
                    android:id="@+id/remove_button_player1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/logo"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_baseline_close_24" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4FA"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar_player2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/logo"
                    android:padding="8dp">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_player2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usertype_player2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="end|center_vertical">

                <ImageButton
                    android:id="@+id/remove_button_player2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/logo"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_baseline_close_24" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/add_virtual_player_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:width="600dp"
            android:backgroundTint="@color/green_1"
            android:text="@string/add_virtual_player_button"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:visibility="gone"/>

        <Button
            android:id="@+id/start_game_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:width="600dp"
            android:backgroundTint="@color/green_1"
            android:text="@string/start_game_button"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_virtual_player_button"
            android:visibility="gone"/>

        <Button
            android:id="@+id/leave_room_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#D1827C"
            android:text="@string/leave_room_button"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_room_bottom" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
