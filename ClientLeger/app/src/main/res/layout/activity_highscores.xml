<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HighscoresActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="846dp"
        android:layout_height="400dp"
        android:background="#F4F4FA"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Vérification de mots"
                android:padding="10dp"
                android:textSize="17pt">

            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <EditText
                android:id="@+id/wordsInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="3"
                android:hint="Entrez un mot pour voir s'il existe!"
                android:padding="10dp"
                android:textSize="15pt">

            </EditText>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/sendBtn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chercher"
                android:textSize="10pt"
                android:layout_margin="10dp">

            </Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_weight="4">
            <TextView
                android:id="@+id/resultView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center"
                android:text="Rentrez les lettres et vérifiez le mot."
                android:textSize="15pt">

            </TextView>





        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
